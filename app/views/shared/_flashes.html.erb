<% if flash[:alert].present? || flash[:toastr].present? || flash[:error].present? || flash[:errors].present? || flash[:success].present? || flash[:notice].present? || flash[:info].present? %>
  <script>
    $(document).ready(function () {
      $(window).load(function() {
        if("<%flash[:error].present?%>" == "true"){
          flash_error("<%flash[:error]%>");
        }
        else if("<%flash[:success].present?%>" == "true"){
          flash_success("<%flash[:success]%>");
        }
        else if("<%flash[:info].present?%>" == "true"){
          flash_info("<%flash[:info]%>");
        }
        else if("<%flash[:alert].present?%>" == "true"){
          flash_alert("<%flash[:alert]%>");
        }
        else if("<%flash[:notice].present?%>" == "true"){
          flash_success("#{flash[:notice]}");
        }else if("<%flash[:errors].present?%>" == "true"){
          $.each('<% raw((flash[:errors] || []).flatten.last || []) %>', function(index ,value) {
            flash_error(value);
          });
        }
      });
    });


  </script>
<% end %>
